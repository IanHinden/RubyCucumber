require 'test/unit'
require 'selenium-webdriver'

class TC_001_Validate_Login_Functionality < Test::Unit::TestCase

  def setup
    Selenium::WebDriver::Chrome.driver_path="C:/Users/Ian Hinden/Documents/chromedriver_win32/chromedriver.exe"
    caps = Selenium::WebDriver::Remote::Capabilities.chrome(:chrome_options => {detach: true})
    @driver = Selenium::WebDriver.for :chrome, desired_capabilities: caps
    @driver.manage.window.maximize
    @driver.get("https://www.facebook.com")
  end

  def teardown
    @driver.close
  end

  def testLoginFunctionality
    actualURL=@driver.current_url
    assert_equal("https://www.facebook.com/",actualURL, "Incorrect Site")

    @driver.find_element(:id,"email").send_keys("Username1")
    @driver.find_element(:name,"pass").send_keys("Password1")
    @driver.find_element(:xpath,"//input[@type='submit']").click
  end

end